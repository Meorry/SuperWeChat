<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/splash_root"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/black_deep" >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/iv_guide_register"
        android:src="@drawable/icon_btn_register"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/iv_guide_login"
        android:layout_alignLeft="@+id/iv_guide_login"
        android:layout_alignStart="@+id/iv_guide_login"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/iv_guide_login"
        android:src="@drawable/icon_btn_login"
        android:layout_marginTop="102dp"
        android:layout_below="@+id/iv_guide_logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="80dp"/>

    <ImageView
        android:id="@+id/iv_guide_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_logo"
        android:layout_marginTop="122dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>